    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/types.d.ts"],
  },
  "include": ["src/**/*", "src/types.d.ts"],
  "ts-node": {
    "files": true
  }
}